<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/tab_view2"
    android:background="#F8F8F8"
    tools:context=".Tab2Fragment">
    <RelativeLayout
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp">
        <Button
            android:id="@+id/tab2_btn1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/ic_see_waste"
            android:backgroundTintMode="add"
            android:textSize="15dp"
            android:text="해양오염" />
        <Button
            android:id="@+id/tab2_btn2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/ic_water_waste"
            android:backgroundTintMode="add"
            android:layout_toRightOf="@+id/tab2_btn1"
            android:textSize="15dp"
            android:text="수질오염" />
        <Button
            android:id="@+id/tab2_btn3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTintMode="add"
            android:drawableTop="@drawable/ic_water"
            android:layout_toRightOf="@id/tab2_btn2"
            android:textSize="15dp"
            android:text="식용수" />
        <Button
            android:id="@+id/tab2_btn4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTintMode="add"
            android:drawableTop="@drawable/ic_city"
            android:layout_toRightOf="@id/tab2_btn3"
            android:textSize="14dp"
            android:text="공동구재난" />
        <Button
            android:id="@+id/tab2_btn5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTintMode="add"
            android:drawableTop="@drawable/ic_animal"
            android:layout_below="@+id/tab2_btn1"
            android:textSize="15dp"
            android:text="가축질병" />
        <Button
            android:id="@+id/tab2_btn6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTintMode="add"
            android:drawableTop="@drawable/ic_syringe"
            android:layout_below="@+id/tab2_btn1"
            android:layout_toRightOf="@id/tab2_btn5"
            android:textSize="14dp"
            android:text="감염병예방" />
        <Button
            android:id="@+id/tab2_btn7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTintMode="add"
            android:drawableTop="@drawable/ic_train"
            android:layout_below="@+id/tab2_btn1"
            android:layout_toRightOf="@id/tab2_btn6"
            android:textSize="15dp"
            android:text="철도사고" />
